{
  "name": "@trig/design-system",
  "version": "1.0.0",
  "description": "Unified design system for Trig projects - React components with Tailwind CSS",
  "main": "components/index.js",
  "module": "components/index.js",
  "exports": {
    ".": "./components/index.js",
    "./components": "./components/index.js",
    "./components/*": "./components/*/index.js",
    "./styles/*": "./styles/*",
    "./tailwind.config": "./tailwind.config.js",
    "./utils/*": "./utils/*"
  },
  "files": [
    "components",
    "styles",
    "utils",
    "scripts",
    "tailwind.config.js",
    "CLAUDE.md",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PatrickMullenPavlov/design-system.git"
  },
  "homepage": "https://github.com/PatrickMullenPavlov/design-system#readme",
  "bugs": {
    "url": "https://github.com/PatrickMullenPavlov/design-system/issues"
  },
  "author": "Trig <hello@trig.ai>",
  "license": "MIT",
  "peerDependencies": {
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@portabletext/react": "^3.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^3.4.0"
  },
  "peerDependenciesMeta": {
    "@portabletext/react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0"
  },
  "keywords": [
    "design-system",
    "react",
    "tailwindcss",
    "components",
    "trig",
    "ui"
  ],
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "validate": "node scripts/validate.js",
    "lint": "node scripts/validate.js"
  }
